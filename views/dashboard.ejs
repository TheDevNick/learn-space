<div class="container">
    <section id="headerInfo">
        <h1 id="topicHeading">Topics you are currently learing</h1>
        <h2>Add A Topic <a href="/newtopic"><i class="fas fa-plus-circle fa-lg"></i></a></h2>
    </section>
                <% info.forEach((topic) => { %>
                    <section class="topicBox card">
                        <div>
                            <h2>Name of Topic</h2>
                            <h3><a href="viewTopic/@topic.TopicId"><%= topic.topicName %></a></h3>
                        </div>
    
                        <div>
                            <h2>Topic Difficulty Level</h2>
                            <h3><a href="viewTopic/topic.TopicId"><%= topic.topicDifficulty %></a></h3>
                           <% if (topic.topicDifficulty == "MediumðŸ˜•" || topic.topicDifficulty == "HardðŸ˜­") { %> 
                               <strong><a href="/adddeck" class="cardOption">Create Flashcards?ðŸ§ </a></strong> 
                           <% } %> 
                        </div>
                        <div>
                            <h2>Thoughts About Topic</h2>
                            <h3><a href="viewTopic/topic.TopicId"><%= topic.topicFeedback %></a></h3>
                        </div>
                        <div class="modifyTopic">
                            <a href="/viewtopic/edit/@topic.TopicId"><i class="fas fa-edit fa-2x"></i></a>
                            <a href="/viewTopic/delete/@topic.TopicId"><i class="fas fa-trash fa-2x"></i></a>
                        </div>
                    </section>
               <% }) %>
</div>
        
